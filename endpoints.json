{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "general-koala",
          "name": "john",
          "avatar-url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2020-05-14T05:15:00.000Z",
          "votes": 10,
          "comment_count": 5
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object containing a single article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2020-05-14T05:15:00.000Z",
        "votes": 10,
        "comment_count": 5
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for a specified article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "body": "Text from the comment...",
          "votes": 15,
          "author": "general-koala",
          "article_id": 3,
          "created_at": "2020-05-14T05:15:00.000Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates votes on an article to number specified in body",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2020-05-14T05:15:00.000Z",
        "votes": "<new vote-count number>",
        "comment_count": 5
      }
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to the specified article and increments comment count for the article",
    "queries": [],
    "exampleResponse": {
      "comment":
        {
          "comment_id": 1,
          "body": "Text from new comment...",
          "votes": 0,
          "author": "general-kangaroo",
          "article_id": 3,
          "created_at": "<current date and time>"
        }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes specified comment and decrements comment count for relevant article",
    "queries": [],
    "exampleResponse": {}
  }
}
